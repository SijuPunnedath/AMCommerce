@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Grand.Web.Models.Catalog;
<div class="page recently-added-products-page product-grid col-12 px-0">
    <h2 class="generalTitle"><a href="@Url.RouteUrl("NewProductsRSS")" class="btn btn-sm btn-outline-success link-rss" title="@T("Products.NewProducts.RSS.Hint")">@T("Products.NewProducts.RSS")</a> @T("Products.NewProducts")</h2>
    @if (Model.Any())
    {
        <div class="row flex-grid">
            @foreach (var product in Model)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 col-6 product-container pb-3">
                    <partial name="_ProductBox" model="product" />
                </div>
            }
        </div>
    }
</div>