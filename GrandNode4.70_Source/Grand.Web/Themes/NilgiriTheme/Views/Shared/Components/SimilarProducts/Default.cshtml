@model IList<ProductOverviewModel>
@if (Model.Any())
{
    <div class="col-12 customGrid similar-products-grid text-center product-grid px-0 my-3">
        <h2 class="generalTitle text-center">@T("Products.SimilarProducts")</h2>
        <div class="page-separator"></div>
        <div class="flex-grid row">
            @foreach (var item in Model)
            {
                <div class="col-xxl-2 col-lg-3 col-sm-6 col-6 product-container mb-2">
                    <partial name="_ProductBox" model="item" />
                </div>
            }
        </div>
    </div>
}